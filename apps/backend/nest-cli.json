{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./src",
  "generateOptions": {
    "flat": true
  },
  "compilerOptions": {
    "tsConfigPath": "./tsconfig.json",
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      "app/**/*.json"
    ],
    "watchAssets": true
  }
}
